{
    "compilerOptions": {
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [ "es2018" ],
        "module": "commonjs",
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "outDir": "./build/",
        "rootDir": "./src/",
        "sourceMap": true,
        "strict": true,
        "target": "es2018"
    },
    "include": [
        "src"
    ]
}
